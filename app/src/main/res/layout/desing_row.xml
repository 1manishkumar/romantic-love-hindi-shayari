<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#BF3463">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-12sp"
        app:cardCornerRadius="9sp"
        app:cardElevation="9sp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_back_colour"
            android:orientation="vertical"
            android:gravity="center">



            <TextView
                android:id="@+id/shayari"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:gravity="center"
                android:padding="12sp"
                android:text="दोस्ती एक वो एहसास होता है जो अनजाने लोगो को भी पास लाता है जो हर पल साथ दे वही दोस्त कहलाता है  वरना तो अपना साया भी साथ छोड़ जाता है"
                android:textColor="#000000"
                android:textSize="19sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#BF3463"
        android:layout_weight="4"
        android:layout_marginTop="-14sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whatsapp"
            android:padding="1sp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/whatsapp"/>



        <ImageView
            android:id="@+id/copy"
            android:padding="1sp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:src="@drawable/copy"/>


        <ImageView
            android:id="@+id/share"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:padding="1sp"
            android:src="@drawable/share"/>


        <ImageView
            android:id="@+id/edit"
            android:padding="1sp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:src="@drawable/edit"/>


    </LinearLayout>



    </LinearLayout>

